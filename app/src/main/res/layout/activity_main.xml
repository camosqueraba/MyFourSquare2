<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TabHost android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TabWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@android:id/tabs" />

            <FrameLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent" >

                <LinearLayout android:id="@+id/tab1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayoutImagenTitulo"
                            android:layout_weight="0.5">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="318dp"
                                android:id="@+id/imagenTitulo"
                                android:src="@mipmap/imagemainarriba"
                                android:background="@mipmap/imagemainarriba" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="103dp">

                            <Button
                                android:text="Desayuno"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonDesayuno"
                                android:background="#efeff4"
                                android:layout_weight="0.3"
                                android:drawableTop="@mipmap/breakfast_intent"
                                android:textAllCaps="false"

                                android:textColor="#606a6f"/>

                            <Button
                                android:text="Almuerzo"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonAlmuerzo"
                                android:background="#efeff4"
                                android:layout_weight="0.3"
                                android:textAllCaps="false"
                                android:drawableTop="@mipmap/lunch_intent"
                                android:textColor="#606a6f"/>

                            <Button
                                android:text="Cena"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonCena"
                                android:background="#efeff4"
                                android:layout_weight="0.3"
                                android:textAllCaps="false"
                                android:drawableTop="@mipmap/dinner_intent"

                                android:textColor="#606a6f" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="96dp">

                            <Button
                                android:text="Cafe y Te"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonCafeyTe"
                                android:background="#efeff4"
                                android:layout_weight="0.24"
                                android:textAllCaps="false"
                                android:drawableTop="@mipmap/coffeetea_intent"

                                android:textColor="#606a6f"/>

                            <Button
                                android:text="Nocturna"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonNoturna"
                                android:background="#efeff4"
                                android:layout_weight="0.25"
                                android:textAllCaps="false"
                                android:drawableTop="@mipmap/nightlife_intent"

                                android:textColor="#606a6f" />

                            <Button
                                android:text="Cosas por hacer"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#efeff4"
                                android:id="@+id/buttonCosasHacer"
                                android:textAllCaps="false"
                                android:drawableTop="@mipmap/thingstodo_intent"

                                android:textColor="#606a6f"
                                android:layout_weight="0.13" />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:id="@+id/tab2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView android:id="@+id/textView2"
                        android:text="Contenido Tab 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout android:id="@+id/tab3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView android:id="@+id/textView3"
                        android:text="Contenido Tab 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout android:id="@+id/tab4"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView android:id="@+id/textView4"
                        android:text="Contenido Tab 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </FrameLayout>
        </RelativeLayout>
    </TabHost>
</LinearLayout>


















